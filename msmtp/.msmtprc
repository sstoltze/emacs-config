# Set default values for all following accounts.
defaults
logfile        ~/.mail/.msmtp.log
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           sstolte@gmail.com
user           sstoltze
passwordeval   gpg2 -q --for-your-eyes-only --no-tty -d ~/.mail/.mailpass.gpg

# Exchange
account        Exchange
host           smtp.office365.com
port           587
from           sisto@eg.dk
user           sisto@eg.dk
passwordeval   gpg2 -q --for-your-eyes-only --no-tty -d ~/.mail/.workpass.gpg

# Set a default account
account default : gmail
